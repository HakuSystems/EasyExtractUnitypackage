<UserControl
    AutomationProperties.HelpText="Displays various application settings for EasyExtract."
    AutomationProperties.Name="BetterSettingsScreen"
    Focusable="True"
    FontFamily="{DynamicResource GlobalFontFamily}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    KeyboardNavigation.TabNavigation="Cycle"
    Loaded="BetterSettings_OnLoaded"
    Margin="0,32,0,0"
    SizeChanged="BetterSettings_OnSizeChanged"
    d:DataContext="{d:DesignInstance config:ConfigModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    x:Class="EasyExtract.Controls.BetterSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:config="clr-namespace:EasyExtract.Config"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mahicons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:PassiveScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    Margin="12"
                    Orientation="Vertical"
                    VerticalAlignment="Stretch">
                    <ui:Card
                        AutomationProperties.HelpText="Toggle Sound effects for the application."
                        AutomationProperties.Name="SoundCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="SoundCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:Card
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="SoundWaveCircle24"
                                    VerticalAlignment="Center" />
                            </ui:Card>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Enable Sound"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="When enabled, the application will play sound effects."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Margin="0,0,5,0"
                                    Text="Volume"
                                    VerticalAlignment="Center" />
                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Margin="5"
                                    Text="{Binding SoundVolume, Converter={StaticResource VolumeToPercentageConverter}, ConverterParameter=Volume}"
                                    VerticalAlignment="Center" />
                                <Slider
                                    LargeChange="0.1"
                                    Margin="0,0,10,0"
                                    Maximum="1"
                                    Minimum="0"
                                    SmallChange="0.01"
                                    ToolTip="Set the volume of the sound effects"
                                    Value="{Binding SoundVolume, Mode=TwoWay}"
                                    ValueChanged="SoundSlider_OnValueChanged"
                                    VerticalAlignment="Center"
                                    x:Name="SoundSlider" />
                                <ui:ToggleSwitch
                                    Checked="SoundCardToggle_OnChecked"
                                    IsChecked="{Binding EnableSound, Mode=TwoWay}"
                                    Margin="5"
                                    Unchecked="SoundCardToggle_OnUnchecked"
                                    x:Name="SoundCardToggle" />
                            </StackPanel>
                        </Grid>
                    </ui:Card>

                    <ui:Card
                        AutomationProperties.HelpText="Select dynamic scaling mode."
                        AutomationProperties.Name="DynamicScalingCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="DynamicScalingCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ui:Card
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="ZoomFit24"
                                    VerticalAlignment="Center" />
                            </ui:Card>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel Margin="6" Orientation="Horizontal">
                                    <ui:TextBlock
                                        FontTypography="BodyStrong"
                                        Text="Dynamic Scaling"
                                        TextWrapping="WrapWithOverflow" />
                                    <Border
                                        Background="#FF3B30"
                                        CornerRadius="8"
                                        Margin="6,0,0,0"
                                        Padding="6,2"
                                        VerticalAlignment="Center">
                                        <ui:TextBlock
                                            FontSize="10"
                                            FontTypography="Caption"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Experimental"
                                            VerticalAlignment="Center" />
                                    </Border>
                                </StackPanel>
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="Enable or disable dynamic scaling, and select the preferred scaling mode."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Foreground="#FF3B30"
                                    Margin="0,0,5,0"
                                    Text="(Applies at restart)"
                                    VerticalAlignment="Center" />
                                <ComboBox
                                    DisplayMemberPath="."
                                    ItemsSource="{Binding DynamicScalingMode}"
                                    Margin="5"
                                    SelectedItem="{Binding DynamicScalingMode, Mode=TwoWay}"
                                    SelectionChanged="DynamicScalingComboBox_OnSelectionChanged"
                                    Width="150"
                                    d:DataContext="{d:DesignInstance config:ConfigModel,
                                                                     IsDesignTimeCreatable=True}"
                                    x:Name="DynamicScalingComboBox" />
                            </StackPanel>
                            <Grid
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Grid.Row="1">
                                <ui:CardExpander
                                    Header="What Does Each Scaling Mode Do?"
                                    Margin="5,5,5,5"
                                    Padding="5">
                                    <StackPanel>
                                        <ui:TextBlock
                                            Appearance="Secondary"
                                            FontTypography="BodyStrong"
                                            Text="Scaling modes determine how the application adapts to different DPI settings."
                                            TextWrapping="WrapWithOverflow" />
                                        <ui:TextBlock
                                            Appearance="Secondary"
                                            FontTypography="Caption"
                                            Opacity="0.5"
                                            Text="In 'Simple' mode, only the main dashboard is scaled dynamically."
                                            TextWrapping="WrapWithOverflow" />
                                        <ui:TextBlock
                                            Appearance="Secondary"
                                            FontTypography="Caption"
                                            Opacity="0.5"
                                            Text="In 'Experimental' mode, both the main dashboard and all its content are fully scaled dynamically. it may sometimes look unusual or inconsistent."
                                            TextWrapping="WrapWithOverflow" />
                                        <ui:InfoBar
                                            IsClosable="False"
                                            IsOpen="True"
                                            Message="We recommend using 'Simple' mode as it is less likely to cause issues."
                                            Padding="5"
                                            Severity="Success"
                                            Title="Recommendation" />
                                    </StackPanel>
                                </ui:CardExpander>
                            </Grid>
                        </Grid>
                    </ui:Card>


                    <ui:Card
                        AutomationProperties.HelpText="Enable or disable context menu entry for .unitypackage files."
                        AutomationProperties.Name="ContextMenuActivationCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="ContextMenuActivationCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:Card
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <mahicons:Modern Kind="Connect" />
                            </ui:Card>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel Margin="6" Orientation="Horizontal">
                                    <ui:TextBlock
                                        FontTypography="BodyStrong"
                                        Text="Context Menu Activation"
                                        TextWrapping="WrapWithOverflow" />
                                    <Border
                                        CornerRadius="8"
                                        Margin="6,0,0,0"
                                        Padding="6,2"
                                        VerticalAlignment="Center">
                                        <ui:TextBlock
                                            FontSize="10"
                                            FontTypography="Caption"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="This Requires Admin Rights"
                                            VerticalAlignment="Center" />
                                    </Border>
                                </StackPanel>
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="Register a menu item in the registry to open this app by right-clicking on a .unitypackage."
                                    TextWrapping="Wrap" />
                            </StackPanel>
                            <ui:ToggleSwitch
                                Checked="ContextMenuSwitch_OnChecked"
                                Grid.Column="2"
                                IsChecked="{Binding ContextMenuToggle, Mode=TwoWay}"
                                Margin="5"
                                Unchecked="ContextMenuSwitch_OnUnchecked"
                                x:Name="ContextMenuSwitch" />
                        </Grid>
                    </ui:Card>
                    <ui:Card
                        AutomationProperties.HelpText="Toggle UwU Mode to make your UI extra cute on next launch!"
                        AutomationProperties.Name="UwUModeActivationCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="UwUModeActivationCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:Card
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="EmojiSparkle24"
                                    VerticalAlignment="Center" />
                            </ui:Card>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Enable UwU Mode"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="When enabled, the title and text will transform into cute UwU style on the next launch."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Foreground="#FF3B30"
                                    Margin="0,0,5,0"
                                    Text="(Applies at restart)"
                                    VerticalAlignment="Center" />
                                <ui:ToggleSwitch
                                    Checked="UwUToggleSwitch_OnChecked"
                                    IsChecked="{Binding UwUModeActive, Mode=TwoWay}"
                                    Margin="5"
                                    Unchecked="UwUToggleSwitch_OnUnchecked"
                                    x:Name="UwUToggleSwitch" />
                            </StackPanel>
                        </Grid>
                    </ui:Card>

                    <ui:Card
                        AutomationProperties.HelpText="Select a visual theme for the application."
                        AutomationProperties.Name="ApplicationThemeCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="ApplicationThemeCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:Card
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="DarkTheme24"
                                    VerticalAlignment="Center" />
                            </ui:Card>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Application Theme"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="Select the visual theme for the application."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Foreground="#FF3B30"
                                    Margin="0,0,5,0"
                                    Text="(Applies at restart)"
                                    VerticalAlignment="Center" />
                                <ComboBox
                                    DisplayMemberPath="."
                                    ItemsSource="{Binding Themes}"
                                    MinWidth="150"
                                    SelectedItem="{Binding ApplicationTheme, Mode=TwoWay}"
                                    SelectionChanged="ThemeComboBox_OnSelectionChanged"
                                    x:Name="ThemeComboBox" />
                            </StackPanel>
                        </Grid>
                    </ui:Card>

                    <ui:Card
                        AutomationProperties.HelpText="Configure a custom background image and its opacity."
                        AutomationProperties.Name="CustomApplicationBackgroundCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="CustomApplicationBackgroundCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ui:Card
                                Grid.RowSpan="2"
                                HorizontalAlignment="Left"
                                Margin="5,0,5,0"
                                VerticalAlignment="Stretch">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="ColorBackground24"
                                    VerticalAlignment="Center" />
                            </ui:Card>
                            <StackPanel
                                Grid.Column="1"
                                Grid.Row="0"
                                VerticalAlignment="Top">
                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Custom Application Background"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="Set a custom image as the application's background."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                            <ui:Card
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                Margin="0,5,0,0"
                                Padding="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <ui:TextBlock
                                            FontTypography="Caption"
                                            Margin="0,0,8,0"
                                            Text="Background Opacity"
                                            VerticalAlignment="Center" />
                                        <Slider
                                            Margin="0,0,10,0"
                                            Maximum="1"
                                            Minimum="0"
                                            ToolTip="Set the opacity of the background wallpaper"
                                            Value="{Binding CustomBackgroundImage.BackgroundOpacity, Mode=TwoWay}"
                                            ValueChanged="BackgroundOpacitySlider_OnValueChanged"
                                            VerticalAlignment="Center"
                                            x:Name="BackgroundOpacitySlider" />
                                        <ui:Button
                                            Click="BackgroundChangeButton_OnClick"
                                            Content="Change Background"
                                            Icon="{ui:SymbolIcon Edit24}"
                                            Margin="0,0,5,0"
                                            x:Name="BackgroundChangeButton" />
                                        <ui:Button
                                            Click="BackgroundResetButton_OnClick"
                                            Content="Reset Background"
                                            Icon="{ui:SymbolIcon ArrowReset24}"
                                            x:Name="BackgroundResetButton" />
                                    </StackPanel>
                                </Grid>
                            </ui:Card>
                        </Grid>
                    </ui:Card>

                    <ui:Card
                        AutomationProperties.HelpText="Toggle automatic update checks when the application starts."
                        AutomationProperties.Name="UpdateCheckCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="UpdateCheckCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:Card
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="ArrowDownload24"
                                    VerticalAlignment="Center" />
                            </ui:Card>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Update"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="Check for updates on startup."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                            <ui:ToggleSwitch
                                Checked="CheckForUpdatesOnStartUpToggleSwitch_OnChecked"
                                Grid.Column="2"
                                IsChecked="{Binding AutoUpdate, Mode=TwoWay}"
                                Margin="5"
                                Unchecked="CheckForUpdatesOnStartUpToggleSwitch_OnUnchecked"
                                x:Name="CheckForUpdatesOnStartUpToggleSwitch" />
                        </Grid>
                    </ui:Card>

                    <ui:Card
                        AutomationProperties.HelpText="Toggle Discord Rich Presence to show current activity."
                        AutomationProperties.Name="DiscordRpcCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="DiscordRpcCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:Card
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Center">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="Apps24"
                                    VerticalAlignment="Center" />
                            </ui:Card>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Discord RPC"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Opacity="0.5"
                                    Text="Show what you're doing on Discord."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                            <ui:ToggleSwitch
                                Checked="DiscordRpcToggleSwitch_OnChecked"
                                Grid.Column="2"
                                IsChecked="{Binding DiscordRpc, Mode=TwoWay}"
                                Margin="5"
                                Unchecked="DiscordRpcToggleSwitch_OnUnchecked"
                                x:Name="DiscordRpcToggleSwitch" />
                        </Grid>
                    </ui:Card>
                    <ui:Card
                        AutomationProperties.HelpText="Configure default paths for extracted packages and temporary files."
                        AutomationProperties.Name="ExtractionPathsCard"
                        Margin="0,0,0,12"
                        Padding="10"
                        x:Name="ExtractionPathsCard">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ui:Card
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Margin="5"
                                VerticalAlignment="Top">
                                <ui:SymbolIcon
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    HorizontalAlignment="Center"
                                    Symbol="FolderZip24"
                                    VerticalAlignment="Center" />
                            </ui:Card>

                            <StackPanel Grid.Column="1" VerticalAlignment="Top">

                                <ui:TextBlock
                                    FontTypography="BodyStrong"
                                    Text="Extraction Paths"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    FontTypography="Caption"
                                    Margin="0,0,0,10"
                                    Opacity="0.5"
                                    Text="Set or reset the default paths for extracted packages and temporary files."
                                    TextWrapping="WrapWithOverflow" />

                                <!--  Output Path Section  -->
                                <StackPanel Margin="0,5,0,5">
                                    <ui:TextBlock FontTypography="Caption" Text="Output Path" />
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <ui:TextBox
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,10,0"
                                            PlaceholderText="Default Output Path"
                                            Text="{Binding DefaultOutputPath, Mode=TwoWay}"
                                            ToolTip="{Binding DefaultOutputPath, Mode=OneWay}"
                                            VerticalAlignment="Center"
                                            x:Name="DefaultOutputPathTextBox" />
                                        <ui:Button
                                            Click="DefaultOutputPathChangeButton_OnClick"
                                            Content="Change"
                                            Icon="{ui:SymbolIcon Edit24}"
                                            Margin="0,0,5,0"
                                            x:Name="DefaultOutputPathChangeButton" />
                                        <ui:Button
                                            Click="DefaultOutputPathResetButton_OnClick"
                                            Content="Reset"
                                            Icon="{ui:SymbolIcon ArrowReset24}"
                                            x:Name="DefaultOutputPathResetButton" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Temp Path Section  -->
                                <StackPanel Margin="0,5,0,0">
                                    <ui:TextBlock FontTypography="Caption" Text="Temporary Files Path" />
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <ui:TextBox
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,10,0"
                                            PlaceholderText="Default Temp Path"
                                            Text="{Binding DefaultTempPath, Mode=TwoWay}"
                                            ToolTip="{Binding DefaultTempPath, Mode=OneWay}"
                                            VerticalAlignment="Center"
                                            x:Name="DefaultTempPathTextBox" />
                                        <ui:Button
                                            Click="DefaultTempPathChangeButton_OnClick"
                                            Content="Change"
                                            Icon="{ui:SymbolIcon Edit24}"
                                            Margin="0,0,5,0"
                                            x:Name="DefaultTempPathChangeButton" />
                                        <ui:Button
                                            Click="DefaultTempPathResetButton_OnClick"
                                            Content="Reset"
                                            Icon="{ui:SymbolIcon ArrowReset24}"
                                            x:Name="DefaultTempPathResetButton" />
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>

                        </Grid>
                    </ui:Card>
                </StackPanel>
            </Grid>
        </ui:PassiveScrollViewer>
    </Grid>
</UserControl>