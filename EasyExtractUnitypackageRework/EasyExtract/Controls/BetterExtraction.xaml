        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <ui:Button Content="Extract" Margin="5" />
            <ui:Button Content="Settings" Margin="5" />
        </StackPanel>
    </StackPanel>
</UserControl>