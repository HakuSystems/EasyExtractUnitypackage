<UserControl
    Focusable="True"
    FontFamily="{DynamicResource GlobalFontFamily}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    KeyboardNavigation.TabNavigation="Cycle"
    Margin="0,32,0,0"
    d:DataContext="{d:DesignInstance config:ConfigModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    x:Class="EasyExtract.Controls.BetterExtraction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:config="clr-namespace:EasyExtract.Config"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:Card Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Horizontal">
                    <ui:TextBlock
                        FontTypography="Title"
                        Margin="0,0,0,8"
                        Text="EasyExtract"
                        TextAlignment="Justify"
                        TextWrapping="WrapWithOverflow"
                        VerticalAlignment="Center" />
                    <ui:TextBlock
                        FontTypography="Title"
                        Foreground="#04d3be"
                        Margin="0,0,0,8"
                        Text="Unitypackage"
                        TextAlignment="Justify"
                        TextWrapping="WrapWithOverflow"
                        VerticalAlignment="Center" />
                </StackPanel>

                <ui:TextBlock
                    FontTypography="Body"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="5,0,0,16"
                    Opacity="0.6"
                    Text="Effortlessly extract and manage Unity assets without launching the Unity Editor."
                    TextAlignment="Left"
                    TextWrapping="WrapWithOverflow" />

                <StackPanel
                    Grid.Column="0"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal">
                    <ui:Button
                        Background="Transparent"
                        Content="Locate Unitypackage"
                        Icon="{ui:SymbolIcon Folder24}"
                        Margin="7" />
                    <ui:Button
                        Background="Transparent"
                        Content="Start Extraction"
                        Foreground="#2ca7f2"
                        Icon="{ui:SymbolIcon Next24}"
                        Margin="7" />
                </StackPanel>

                <ui:Image
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    MaxHeight="50"
                    MaxWidth="50"
                    Source="../Resources/ExtractionProcess/Closed.png"
                    VerticalAlignment="Center" />
            </Grid>
        </ui:Card>

        <ui:AutoSuggestBox
            Grid.Row="1"
            Margin="10,0,10,0"
            Padding="10"
            PlaceholderText="Search Unitypackage" />
    </Grid>


</UserControl>