<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
        COLOR KEYS:
        CHANGE THESE COLORS TO UPDATE THE BRUSHES.
    -->
    <Color x:Key="TextColor">#7fc5ff</Color>
    <Color x:Key="BackgroundColor">#2b2b2b</Color>
    <Color x:Key="PrimaryColor">#2ca7f2</Color>
    <Color x:Key="SecondaryColor">#4D4D4D</Color>
    <Color x:Key="AccentColor">#04d3be</Color>

    <!--
        CORRESPONDING BRUSHES:
        color keys are overridden, the brush automatically updates.
        DONT CHANGE THE BRUSHES, CHANGE THE COLORS INSTEAD.
    -->
    <SolidColorBrush Color="{DynamicResource TextColor}" x:Key="TextColorBrush" />
    <SolidColorBrush Color="{DynamicResource BackgroundColor}" x:Key="BackgroundColorBrush" />
    <SolidColorBrush Color="{DynamicResource PrimaryColor}" x:Key="PrimaryBrush" />
    <SolidColorBrush Color="{DynamicResource SecondaryColor}" x:Key="SecondaryBrush" />
    <SolidColorBrush Color="{DynamicResource AccentColor}" x:Key="AccentBrush" />
</ResourceDictionary>