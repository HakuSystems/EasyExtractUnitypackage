<Window
    AllowDrop="True"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource GlobalFontFamily}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    MinHeight="450"
    MinWidth="800"
    ShowInTaskbar="False"
    SizeChanged="MainWindow_OnSizeChanged"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    x:Class="EasyExtract.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        x:Name="RootGrid">

        <Image
            HorizontalAlignment="Center"
            Stretch="Uniform"
            VerticalAlignment="Center"
            gif:AnimationBehavior.Loaded="AnimationBehavior_OnLoaded"
            gif:AnimationBehavior.SourceUri="pack://application:,,,/EasyExtract;component/Resources/Gifs/LogoAnimation.gif"
            x:Name="LogoImage" />
    </Grid>
</Window>