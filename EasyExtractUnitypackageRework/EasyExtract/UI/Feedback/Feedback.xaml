<UserControl
    x:Class="EasyExtract.UI.Feedback.Feedback"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    FontFamily="{DynamicResource SegoeFluentIcons}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Loaded="Feedback_OnLoaded"
    mc:Ignorable="d">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ui:TextBlock
                Grid.Row="0"
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#2ca7f2"
                Text="We value your feedback!" />

            <StackPanel
                Grid.Row="1"
                Margin="10"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <ui:TextBlock Margin="0,0,0,5" Text="How satisfied are you with this software?" />
                <ComboBox x:Name="FeedbackSelection" HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Very Satisfied" />
                    <ComboBoxItem Content="Satisfied" />
                    <ComboBoxItem Content="Neutral" />
                    <ComboBoxItem Content="Dissatisfied" />
                    <ComboBoxItem Content="Very Dissatisfied" />
                </ComboBox>

                <ui:TextBlock Margin="0,15,0,5" Text="Your comment or Improvement Request:" />
                <ui:TextBox
                    x:Name="FeedbackTextBox"
                    Height="100"
                    AcceptsReturn="True"
                    BorderBrush="#7fc5ff"
                    BorderThickness="1"
                    MaxLength="1000"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ui:TextBlock
                    x:Name="DiscordNameRequest"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Sending Request as Anonymous" />
                <ui:Button
                    x:Name="SubmitFeedbackButton"
                    Margin="10"
                    Padding="10,5"
                    Click="SubmitFeedbackButton_OnClick"
                    Content="Submit Feedback"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>