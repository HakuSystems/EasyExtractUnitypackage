<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="24" Background="{DynamicResource EasyWindowBackgroundBrush}">
            <StackPanel Spacing="12">
                <Button Content="Primary Action" />
                <Button Classes="ghost" Content="Secondary" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="Button">
        <Setter Property="Foreground" Value="{DynamicResource EasyOnPrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource EasyGlassGradientBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource EasyGlassBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="18,12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="44" />
        <Setter Property="Opacity" Value="0.95" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource EasyAccentBrush}" />
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <Style Selector="Button:disabled">
        <Setter Property="Opacity" Value="0.4" />
        <Setter Property="BorderBrush" Value="{DynamicResource EasyGlassDisabledBorderBrush}" />
    </Style>

    <Style Selector="Button.ghost">
        <Setter Property="Foreground" Value="{DynamicResource EasyMutedBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="MinHeight" Value="38" />
    </Style>

    <Style Selector="Button.ghost:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource EasyTextColorBrush}" />
        <Setter Property="Background" Value="{DynamicResource EasyGlassOverlayBrush}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.ghost:pressed">
        <Setter Property="Opacity" Value="0.6" />
    </Style>
</Styles>