<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:EasyExtractCrossPlatform"
        Foreground="{DynamicResource EasyTextColorBrush}"
        Background="{DynamicResource EasyWindowBackgroundBrush}"
        mc:Ignorable="d"
        d:DesignWidth="1800"
        d:DesignHeight="1180"
        x:Class="EasyExtractCrossPlatform.MainWindow"
        Title="EasyExtract"
        TransparencyLevelHint="AcrylicBlur"
        TransparencyBackgroundFallback="{DynamicResource EasyWindowBackgroundBrush}">
    <Window.Styles>
        <Style Selector="Border.drop-zone">
            <Setter Property="CornerRadius" Value="24" />
            <Setter Property="Background" Value="{DynamicResource EasyGlassOverlayBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyGlassNeutralBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="36" />
            <Setter Property="BoxShadow" Value="0 24 40 0 #12000000" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="{x:Static Border.BackgroundProperty}" Duration="0:0:0.22" />
                    <BrushTransition Property="{x:Static Border.BorderBrushProperty}" Duration="0:0:0.22" />
                    <ThicknessTransition Property="{x:Static Border.BorderThicknessProperty}" Duration="0:0:0.22" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Border.drop-zone.drag-active">
            <Setter Property="Background" Value="{DynamicResource EasyGlassOverlayStrongBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyGlassBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style Selector="Border.drop-zone.drag-valid">
            <Setter Property="Background" Value="{DynamicResource EasyAccentSoftBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyAccentBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="1" />
        </Style>

        <Style Selector="Border.drop-zone.drag-invalid">
            <Setter Property="Background" Value="{DynamicResource EasyDangerOverlayBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyDangerBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="0.85" />
        </Style>

        <Style Selector="Border.drop-zone.drop-success">
            <Setter Property="Background" Value="{DynamicResource EasyAccentStrongBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyAccentBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="1" />
        </Style>

        <Style Selector="Border#LicenseTierBadge.pro-tier">
            <Setter Property="Background" Value="{DynamicResource EasyAccentStrongBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyAccentBrush}" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid Margin="40" RowDefinitions="Auto,*,Auto">
            <Border Grid.Row="0" Margin="0,0,0,32"
                    Padding="28"
                    CornerRadius="28"
                    Background="{DynamicResource EasyGlassGradientBrush}"
                    BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                    BorderThickness="1"
                    BoxShadow="0 40 80 0 #12000000">
                <Grid ColumnDefinitions="Auto,*,Auto"
                      VerticalAlignment="Top">
                    <Border Grid.Column="0"
                            Width="128"
                            Height="128"
                            CornerRadius="32"
                            Background="{DynamicResource EasyGlassOverlayBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                            BorderThickness="1"
                            Margin="0,0,24,0">
                        <Image Source="avares://EasyExtractCrossPlatform/Assets/AppLogo.png"
                               Stretch="Uniform"
                               Margin="12" />
                    </Border>

                    <StackPanel Grid.Column="1"
                                Spacing="12"
                                VerticalAlignment="Top">
                        <TextBlock Text="EasyExtract"
                                   Classes="display" />
                        <TextBlock Text="Extract Unity Packages Without Unity"
                                   Classes="subtle"
                                   HorizontalAlignment="Left"
                                   MaxWidth="480" />
                        <StackPanel Orientation="Horizontal"
                                    Spacing="12">
                            <Border Padding="12,6"
                                    Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                    CornerRadius="12">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <Ellipse Width="10"
                                             Height="10"
                                             Fill="{DynamicResource EasyAccentBrush}"
                                             VerticalAlignment="Center" />
                                    <TextBlock x:Name="VersionTextBlock"
                                               Text="Version 0.0.0.0"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                            </Border>
                            <Button x:Name="CheckUpdatesButton"
                                    Classes="ghost"
                                    Click="CheckUpdatesButton_OnClick">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                VerticalAlignment="Center">
                                        <PathIcon Data="M12 4A8 8 0 1 0 20 12H18A6 6 0 1 1 12 6V9L16 5L12 1V4Z"
                                                  Width="16"
                                                  Height="16" />
                                        <TextBlock Text="Check for updates" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="24,0,0,0"
                                Spacing="12">
                        <Border x:Name="LicenseTierBadge"
                                Padding="14,6"
                                Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12">
                            <TextBlock x:Name="LicenseTierTextBlock"
                                       Text="Free Version"
                                       FontWeight="SemiBold"
                                       TextAlignment="Right" />
                        </Border>
                        <Button x:Name="UpgradeButton"
                                Classes="ghost"
                                HorizontalAlignment="Right"
                                Content="Upgrade to Pro"
                                Click="UpgradeButton_OnClick"
                                ToolTip.Tip="Unlock upcoming premium features" />
                        <StackPanel Spacing="4"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="Credits to DigitalAzure for the Logo Design"
                                       Classes="subtle"
                                       TextAlignment="Right" />
                            <TextBlock Text="Credits to Jan-Fcloud for some ideas"
                                       Classes="subtle"
                                       TextAlignment="Right" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" ColumnDefinitions="2*,*" Margin="0,0,0,32">
                <Border Grid.Column="0"
                        Padding="34"
                        CornerRadius="28"
                        Background="{DynamicResource EasyGlassGradientBrush}"
                        BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                        BorderThickness="1"
                        BoxShadow="0 30 60 0 #14000000">
                    <StackPanel Spacing="28">
                        <Grid x:Name="StartExtractionHeaderGrid"
                              RowDefinitions="Auto,Auto">
                            <Grid ColumnDefinitions="Auto,*" HorizontalAlignment="Right"
                                  VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="10"
                                            VerticalAlignment="Center">
                                    <PathIcon
                                        Data="M12 3C7.58172 3 4 6.58172 4 11V21H20V11C20 6.58172 16.4183 3 12 3ZM13 17H11V13H9L12 9L15 13H13V17Z"
                                        Width="28"
                                        Height="28"
                                        Foreground="{DynamicResource EasyAccentBrush}"
                                        VerticalAlignment="Center" />
                                    <TextBlock Text="Start a new extraction"
                                               FontSize="26"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </StackPanel>

                                <Border x:Name="SearchRevealHost"
                                        Grid.Column="1"
                                        Margin="24,0,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Padding="0"
                                        PointerEntered="SearchRevealHost_OnPointerEntered"
                                        PointerExited="SearchRevealHost_OnPointerExited">
                                    <Border.Styles>
                                        <Style Selector="Border#SearchRevealHost TextBox.search-bar">
                                            <Setter Property="Width" Value="0" />
                                            <Setter Property="Opacity" Value="0" />
                                            <Setter Property="MinWidth" Value="0" />
                                            <Setter Property="IsHitTestVisible" Value="False" />
                                            <Setter Property="Margin" Value="8,0,0,0" />
                                        </Style>
                                        <Style Selector="Border#SearchRevealHost:pointerover TextBox.search-bar">
                                            <Setter Property="Width" Value="280" />
                                            <Setter Property="Opacity" Value="1" />
                                            <Setter Property="IsHitTestVisible" Value="True" />
                                        </Style>
                                        <Style Selector="Border#SearchRevealHost.search-active TextBox.search-bar">
                                            <Setter Property="Width" Value="280" />
                                            <Setter Property="Opacity" Value="1" />
                                            <Setter Property="IsHitTestVisible" Value="True" />
                                        </Style>
                                    </Border.Styles>
                                    <Grid ColumnDefinitions="Auto,Auto">
                                        <StackPanel Spacing="8" HorizontalAlignment="Right">
                                            <Border x:Name="SearchHintContainer"
                                                    Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                                    BorderBrush="{DynamicResource EasyAccentSoftBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="16"
                                                    Padding="10,6"
                                                    HorizontalAlignment="Right"
                                                    Opacity="0"
                                                    IsHitTestVisible="False">
                                                <Border.Transitions>
                                                    <Transitions>
                                                        <DoubleTransition Property="Opacity"
                                                                          Duration="0:0:0.18"
                                                                          Easing="0,0.55,0.45,1" />
                                                    </Transitions>
                                                </Border.Transitions>
                                                <TextBlock Text="Search your device for *.unitypackage files"
                                                           Classes="subtle"
                                                           HorizontalAlignment="Right" />
                                            </Border>
                                            <Grid ColumnDefinitions="Auto,*" HorizontalAlignment="Right"
                                                  VerticalAlignment="Center">
                                                <Border x:Name="SearchIconBorder"
                                                        Width="44"
                                                        Height="44"
                                                        CornerRadius="22"
                                                        Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                                        BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                    <PathIcon
                                                        Data="M15.5 14H14.71L14.43 13.73C15.41 12.59 16 11.11 16 9.5C16 5.91 13.09 3 9.5 3C5.91 3 3 5.91 3 9.5C3 13.09 5.91 16 9.5 16C11.11 16 12.59 15.41 13.73 14.43L14 14.71V15.5L18 19.49L19.49 18L15.5 14ZM9.5 14C7.01 14 5 11.99 5 9.5C5 7.01 7.01 5 9.5 5C11.99 5 14 7.01 14 9.5C14 11.99 11.99 14 9.5 14Z"
                                                        Width="20"
                                                        Height="20"
                                                        Foreground="{DynamicResource EasyAccentBrush}"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                                <TextBox x:Name="UnityPackageSearchBox"
                                                         Grid.Column="1"
                                                         Margin="12,0,0,0"
                                                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                                         Classes="search-bar search-bar-small"
                                                         x:CompileBindings="False" />
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>

                        <Grid x:Name="DropZoneHostGrid">
                            <Border x:Name="DropZoneBorder"
                                    Classes="drop-zone"
                                    DragDrop.AllowDrop="True"
                                    DragDrop.DragEnter="DropZoneBorder_OnDragEnter"
                                    DragDrop.DragLeave="DropZoneBorder_OnDragLeave"
                                    DragDrop.Drop="DropZoneBorder_OnDrop"
                                    DragDrop.DragOver="DropZoneBorder_OnDragOver">
                                <StackPanel Spacing="22" HorizontalAlignment="Center">
                                    <Border Width="88" Height="88"
                                            CornerRadius="28"
                                            Background="{DynamicResource EasyGlassOverlayFaintBrush}"
                                            BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                            BorderThickness="1"
                                            HorizontalAlignment="Center">
                                        <PathIcon Data="M21 20V18H3V20H21Z M12 2L4 10H9V17H15V10H20L12 2Z"
                                                  Width="34"
                                                  Height="34"
                                                  Foreground="{DynamicResource EasyAccentBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                                    </Border>

                                    <StackPanel Spacing="6" HorizontalAlignment="Center">
                                        <TextBlock x:Name="DropZonePrimaryTextBlock"
                                                   Text="Drag &amp; drop files here"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   TextAlignment="Center" />
                                        <TextBlock x:Name="DropZoneSecondaryTextBlock"
                                                   Text="Supports batch extraction and live progress updates."
                                                   Classes="subtle"
                                                   TextAlignment="Center" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Spacing="10"
                                                HorizontalAlignment="Center">
                                        <Button x:Name="StartExtractionButton"
                                                Width="160"
                                                Click="StartExtractionButton_OnClick">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Spacing="8"
                                                            HorizontalAlignment="Center">
                                                    <PathIcon
                                                        Data="M3 6H8L10 8H20C21.1046 8 22 8.89543 22 10V18C22 19.1046 21.1046 20 20 20H4C2.89543 20 2 19.1046 2 18V7C2 6.44772 2.44772 6 3 6Z"
                                                        Width="18"
                                                        Height="18"
                                                        Foreground="{DynamicResource EasyAccentBrush}"
                                                        VerticalAlignment="Center" />
                                                    <TextBlock Text="Start extraction"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button x:Name="BatchExtractionButton"
                                                Classes="ghost"
                                                Click="BatchExtractionButton_OnClick">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Spacing="8"
                                                            VerticalAlignment="Center">
                                                    <PathIcon
                                                        Data="M3 6H8L10 8H20C21.1046 8 22 8.89543 22 10V18C22 19.1046 21.1046 20 20 20H4C2.89543 20 2 19.1046 2 18V7C2 6.44772 2.44772 6 3 6Z M16 11V13H19V15H16V18H14V15H11V13H14V11H16Z"
                                                        Width="18"
                                                        Height="18"
                                                        Foreground="{DynamicResource EasyAccentBrush}"
                                                        VerticalAlignment="Center" />
                                                    <TextBlock Text="Batch extraction"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border x:Name="SearchResultsBorder"
                                    Margin="0"
                                    Padding="24"
                                    Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                    BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="24"
                                    Opacity="0"
                                    IsVisible="False"
                                    IsHitTestVisible="False">
                                <views:EverythingSearchView x:Name="EverythingSearch"
                                                            Classes="compact minimal"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch" />
                            </Border>
                        </Grid>

                        <Border x:Name="ExtractionDashboard"
                                Padding="28"
                                CornerRadius="24"
                                Background="{DynamicResource EasyGlassGradientBrush}"
                                BorderBrush="{DynamicResource EasyAccentSoftBrush}"
                                BorderThickness="1"
                                BoxShadow="0 26 60 0 #18000000"
                                Opacity="0"
                                IsVisible="False">
                            <Border.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity"
                                                      Duration="0:0:0.25"
                                                      Easing="0.2,0.8,0.2,1" />
                                </Transitions>
                            </Border.Transitions>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="0.98" ScaleY="0.98">
                                    <ScaleTransform.Transitions>
                                        <Transitions>
                                            <DoubleTransition Property="{x:Static ScaleTransform.ScaleXProperty}"
                                                              Duration="0:0:0.25"
                                                              Easing="0.2,0.8,0.2,1" />
                                            <DoubleTransition Property="{x:Static ScaleTransform.ScaleYProperty}"
                                                              Duration="0:0:0.25"
                                                              Easing="0.2,0.8,0.2,1" />
                                        </Transitions>
                                    </ScaleTransform.Transitions>
                                </ScaleTransform>
                            </Border.RenderTransform>
                            <StackPanel Spacing="18">
                                <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                                    <Border Grid.Column="0"
                                            Width="40" Height="40" CornerRadius="20"
                                            Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                            BorderBrush="{DynamicResource EasyAccentBrush}"
                                            BorderThickness="1">
                                        <PathIcon
                                            Data="M12 2C6.477 2 2 6.477 2 12C2 17.523 6.477 22 12 22C17.523 22 22 17.523 22 12H19.5C19.5 16.1421 16.1421 19.5 12 19.5C7.85786 19.5 4.5 16.1421 4.5 12C4.5 7.85786 7.85786 4.5 12 4.5C14.0196 4.5 15.8645 5.28121 17.1905 6.60998L14.5 9.25H22V2L19.1757 4.82426C17.4006 3.04502 14.8484 2 12 2Z"
                                            Width="20"
                                            Height="20"
                                            Foreground="{DynamicResource EasyAccentBrush}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock Text="Extraction in progress"
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                        <TextBlock x:Name="ExtractionDashboardSubtitle"
                                                   Text="Preparing package..."
                                                   Classes="subtle" />
                                    </StackPanel>
                                    <Border Grid.Column="2"
                                            Margin="12,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Padding="10,4"
                                            CornerRadius="12"
                                            Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                            BorderBrush="{DynamicResource EasyAccentSoftBrush}"
                                            BorderThickness="1">
                                        <TextBlock x:Name="ExtractionDashboardQueueCount"
                                                   Text="Queue: 0"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource EasyAccentBrush}" />
                                    </Border>
                                </Grid>

                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                    <ProgressBar x:Name="ExtractionDashboardProgressBar"
                                                 Grid.ColumnSpan="2"
                                                 Height="12"
                                                 Classes="accent"
                                                 IsIndeterminate="True" />
                                    <TextBlock Grid.Row="1"
                                               Text="Current package"
                                               Classes="subtle"
                                               Margin="0,12,0,0" />
                                    <TextBlock x:Name="ExtractionDashboardPackageText"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               Text="ΓÇö"
                                               Margin="12,12,0,0"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>

                                <StackPanel Spacing="12">
                                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                                        <TextBlock Text="Asset"
                                                   Classes="subtle" />
                                        <TextBlock x:Name="ExtractionDashboardAssetText"
                                                   Grid.Column="1"
                                                   Text="Waiting..."
                                                   Margin="12,0,0,0"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock Grid.Row="1"
                                                   Text="Output"
                                                   Classes="subtle"
                                                   Margin="0,8,0,0" />
                                        <TextBlock x:Name="ExtractionDashboardOutputText"
                                                   Grid.Row="1"
                                                   Grid.Column="1"
                                                   Text="ΓÇö"
                                                   Margin="12,8,0,0"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                    <Border CornerRadius="18"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                            Background="{DynamicResource EasyGlassOverlayFaintBrush}"
                                            Padding="16">
                                        <Grid ColumnDefinitions="*,*,*">
                                            <StackPanel Grid.Column="0"
                                                        Margin="0,0,16,0">
                                                <TextBlock Text="Assets extracted"
                                                           Classes="subtle" />
                                                <TextBlock x:Name="ExtractionDashboardAssetCount"
                                                           Text="0"
                                                           FontSize="22"
                                                           FontWeight="SemiBold" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1"
                                                        Margin="0,0,16,0">
                                                <TextBlock Text="Elapsed time"
                                                           Classes="subtle" />
                                                <TextBlock x:Name="ExtractionDashboardElapsed"
                                                           Text="0s"
                                                           FontSize="22"
                                                           FontWeight="SemiBold" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Next up"
                                                           Classes="subtle" />
                                                <TextBlock x:Name="ExtractionDashboardNextPackage"
                                                           Text="All caught up"
                                                           FontSize="22"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" Spacing="28" Margin="28,0,0,0">
                    <Border Padding="28"
                            CornerRadius="24"
                            Background="{DynamicResource EasyGlassGradientBrush}"
                            BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                            BorderThickness="1"
                            BoxShadow="0 26 50 0 #14000000">
                        <StackPanel Spacing="18">
                            <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                                <Border Grid.Column="0"
                                        Width="36" Height="36" CornerRadius="18"
                                        Margin="0,0,12,0"
                                        Background="{DynamicResource EasyGlassOverlayBrush}"
                                        BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                        BorderThickness="1">
                                    <PathIcon
                                        Data="M5 4H19C20.1046 4 21 4.89543 21 6V18C21 19.1046 20.1046 20 19 20H5C3.89543 20 3 19.1046 3 18V6C3 4.89543 3.89543 4 5 4Z M7 8H17V10H7V8Z M7 12H17V14H7V12Z M7 16H14V18H7V16Z"
                                        Width="20"
                                        Height="20"
                                        Foreground="{DynamicResource EasyAccentBrush}"
                                        VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Extraction queue"
                                               FontWeight="SemiBold"
                                               FontSize="18" />
                                    <TextBlock x:Name="QueueSummaryTextBlock"
                                               Text="Queue is empty"
                                               Classes="subtle" />
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            HorizontalAlignment="Right">
                                    <Button x:Name="ProcessQueueButton"
                                            Click="ProcessQueueButton_OnClick"
                                            ToolTip.Tip="Extract every package currently queued."
                                            Content="Extract queue" />
                                    <Button x:Name="ClearQueueButton"
                                            Classes="ghost"
                                            Click="ClearQueueButton_OnClick"
                                            ToolTip.Tip="Remove every package from the queue."
                                            Content="Clear queue" />
                                </StackPanel>
                            </Grid>

                            <StackPanel x:Name="QueueEmptyState"
                                        Spacing="6"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="No packages in queue yet."
                                           FontWeight="SemiBold"
                                           TextAlignment="Center" />
                                <TextBlock
                                    Text="Drop .unitypackage files or add them from search to populate the queue."
                                    Classes="subtle"
                                    TextAlignment="Center"
                                    MaxWidth="320" />
                            </StackPanel>

                            <ScrollViewer x:Name="QueueItemsScrollViewer"
                                          MaxHeight="320"
                                          IsVisible="False"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="QueueItemsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Spacing="12" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:CompileBindings="False">
                                            <Border CornerRadius="18"
                                                    Background="{DynamicResource EasyGlassOverlayFaintBrush}"
                                                    BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                                    BorderThickness="1"
                                                    Padding="16">
                                                <Grid ColumnDefinitions="*,Auto,Auto">
                                                    <StackPanel Spacing="4">
                                                        <TextBlock Text="{Binding FileName}"
                                                                   FontWeight="SemiBold"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Text="{Binding LocationText}"
                                                                   Classes="subtle"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip.Tip="{Binding FilePath}" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1"
                                                                Margin="16,0,0,0"
                                                                Spacing="4"
                                                                HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding SizeText}"
                                                                   FontWeight="SemiBold"
                                                                   HorizontalAlignment="Right" />
                                                        <TextBlock Text="{Binding StatusText}"
                                                                   Classes="subtle"
                                                                   HorizontalAlignment="Right" />
                                                    </StackPanel>
                                                    <Button Grid.Column="2"
                                                            Content="Preview"
                                                            Classes="ghost"
                                                            Margin="16,0,0,0"
                                                            Click="PreviewQueueItemButton_OnClick"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
