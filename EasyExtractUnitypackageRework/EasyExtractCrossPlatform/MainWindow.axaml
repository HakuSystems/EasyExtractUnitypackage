<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:EasyExtractCrossPlatform"
        Foreground="{DynamicResource EasyTextColorBrush}"
        Background="{DynamicResource EasyWindowBackgroundBrush}"
        mc:Ignorable="d"
        d:DesignWidth="1120"
        d:DesignHeight="680"
        x:Class="EasyExtractCrossPlatform.MainWindow"
        Title="EasyExtract"
        TransparencyLevelHint="AcrylicBlur">
    <Window.Styles>
        <Style Selector="Border.drop-zone">
            <Setter Property="CornerRadius" Value="24" />
            <Setter Property="Background" Value="{DynamicResource EasyGlassOverlayBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyGlassNeutralBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="36" />
            <Setter Property="BoxShadow" Value="0 24 40 0 #12000000" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="{x:Static Border.BackgroundProperty}" Duration="0:0:0.22" />
                    <BrushTransition Property="{x:Static Border.BorderBrushProperty}" Duration="0:0:0.22" />
                    <ThicknessTransition Property="{x:Static Border.BorderThicknessProperty}" Duration="0:0:0.22" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Border.drop-zone.drag-active">
            <Setter Property="Background" Value="{DynamicResource EasyGlassOverlayStrongBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyGlassBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style Selector="Border.drop-zone.drag-valid">
            <Setter Property="Background" Value="{DynamicResource EasyAccentSoftBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyAccentBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="1" />
        </Style>

        <Style Selector="Border.drop-zone.drag-invalid">
            <Setter Property="Background" Value="{DynamicResource EasyDangerOverlayBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyDangerBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="0.85" />
        </Style>

        <Style Selector="Border.drop-zone.drop-success">
            <Setter Property="Background" Value="{DynamicResource EasyAccentStrongBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EasyAccentBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="1" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid Margin="40" RowDefinitions="Auto,*,Auto">
            <Border Grid.Row="0" Margin="0,0,0,32"
                    Padding="28"
                    CornerRadius="28"
                    Background="{DynamicResource EasyGlassGradientBrush}"
                    BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                    BorderThickness="1"
                    BoxShadow="0 40 80 0 #12000000">
                <Grid ColumnDefinitions="Auto,*"
                      VerticalAlignment="Center">
                    <Border Width="128" Height="128" CornerRadius="32"
                            Background="{DynamicResource EasyGlassOverlayBrush}"
                            HorizontalAlignment="Right"
                            BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                            BorderThickness="1">
                        <Image Source="avares://EasyExtractCrossPlatform/Assets/AppLogo.png"
                               Stretch="Uniform"
                               Margin="12" />
                    </Border>

                    <StackPanel Grid.Column="1" Spacing="12" VerticalAlignment="Center" Margin="24,0,0,0">
                        <TextBlock Text="EasyExtract"
                                   Classes="display" />
                        <TextBlock Text="Extract Unity Packages Without Unity"
                                   Classes="subtle"
                                   HorizontalAlignment="Left"
                                   MaxWidth="480" />
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Padding="12,6"
                                    Background="{DynamicResource EasyGlassOverlayStrongBrush}"
                                    CornerRadius="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Ellipse Width="10" Height="10" Fill="{DynamicResource EasyAccentBrush}"
                                             VerticalAlignment="Center" />
                                    <TextBlock x:Name="VersionTextBlock"
                                               Text="Version 0.0.0.0"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                            </Border>
                            <Button x:Name="DetailsBtn"
                                    Classes="ghost"
                                    Click="DetailsBtn_OnClick">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                        <TextBlock Text="Release notes" />
                                        <PathIcon Data="M8 6V18L18 12L8 6Z" Width="16" Height="16" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" ColumnDefinitions="2*,*" Margin="0,0,0,32">
                <Border Grid.Column="0"
                        Padding="34"
                        CornerRadius="28"
                        Background="{DynamicResource EasyGlassGradientBrush}"
                        BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                        BorderThickness="1"
                        BoxShadow="0 30 60 0 #14000000">
                    <StackPanel Spacing="28">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                <PathIcon
                                    Data="M12 3C7.58172 3 4 6.58172 4 11V21H20V11C20 6.58172 16.4183 3 12 3ZM13 17H11V13H9L12 9L15 13H13V17Z"
                                    Width="28"
                                    Height="28"
                                    Foreground="{DynamicResource EasyAccentBrush}"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="Start a new extraction"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Text="Drag &amp; drop a .unitypackage or choose a source to begin."
                                       Classes="subtle" />
                        </StackPanel>

                        <Border x:Name="DropZoneBorder"
                                Classes="drop-zone"
                                DragDrop.AllowDrop="True"
                                DragDrop.DragEnter="DropZoneBorder_OnDragEnter"
                                DragDrop.DragLeave="DropZoneBorder_OnDragLeave"
                                DragDrop.Drop="DropZoneBorder_OnDrop"
                                DragDrop.DragOver="DropZoneBorder_OnDragOver">
                            <StackPanel Spacing="22" HorizontalAlignment="Center">
                                <Border Width="88" Height="88"
                                        CornerRadius="28"
                                        Background="{DynamicResource EasyGlassOverlayFaintBrush}"
                                        BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                        BorderThickness="1"
                                        HorizontalAlignment="Center">
                                    <PathIcon Data="M21 20V18H3V20H21Z M12 2L4 10H9V17H15V10H20L12 2Z"
                                              Width="34"
                                              Height="34"
                                              Foreground="{DynamicResource EasyAccentBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                </Border>

                                <StackPanel Spacing="6" HorizontalAlignment="Center">
                                    <TextBlock x:Name="DropZonePrimaryTextBlock"
                                               Text="Drag &amp; drop files here"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               TextAlignment="Center" />
                                    <TextBlock x:Name="DropZoneSecondaryTextBlock"
                                               Text="Supports batch extraction and live progress updates."
                                               Classes="subtle"
                                               TextAlignment="Center" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Spacing="10"
                                            HorizontalAlignment="Center">
                                    <Button Width="160">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="8"
                                                        HorizontalAlignment="Center">
                                                <PathIcon
                                                    Data="M3 6H8L10 8H20C21.1046 8 22 8.89543 22 10V18C22 19.1046 21.1046 20 20 20H4C2.89543 20 2 19.1046 2 18V7C2 6.44772 2.44772 6 3 6Z"
                                                    Width="18"
                                                    Height="18"
                                                    Foreground="{DynamicResource EasyAccentBrush}"
                                                    VerticalAlignment="Center" />
                                                <TextBlock Text="Browse files"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <Button Classes="ghost">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                <PathIcon
                                                    Data="M3 6H8L10 8H20C21.1046 8 22 8.89543 22 10V18C22 19.1046 21.1046 20 20 20H4C2.89543 20 2 19.1046 2 18V7C2 6.44772 2.44772 6 3 6Z M16 11V13H19V15H16V18H14V15H11V13H14V11H16Z"
                                                    Width="18"
                                                    Height="18"
                                                    Foreground="{DynamicResource EasyAccentBrush}"
                                                    VerticalAlignment="Center" />
                                                <TextBlock Text="Add folder"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <PathIcon
                                    Data="M12 2C7.02944 2 3 6.02944 3 11C3 14.2816 4.83517 17.1716 7.5 18.7386V20.5C7.5 21.0523 7.94772 21.5 8.5 21.5H15.5C16.0523 21.5 16.5 21.0523 16.5 20.5V18.7386C19.1648 17.1716 21 14.2816 21 11C21 6.02944 16.9706 2 12 2ZM13 18.5H11V12.5H13V18.5ZM13 10.5H11V8.5H13V10.5Z"
                                    Width="20"
                                    Height="20"
                                    Foreground="{DynamicResource EasyAccentBrush}"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="Helpful tips"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                            <StackPanel Spacing="10">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <PathIcon Data="M20 6L9 17L4 12L5.41 10.59L9 14.17L18.59 4.58L20 6Z"
                                              Width="16"
                                              Height="16"
                                              Foreground="{DynamicResource EasyAccentBrush}"
                                              VerticalAlignment="Center" />
                                    <TextBlock Text="Outputs mirror the original package structure for quick audits."
                                               Classes="subtle" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <PathIcon
                                        Data="M12 5C7 5 2.73 8.11 1 12C2.73 15.89 7 19 12 19C17 19 21.27 15.89 23 12C21.27 8.11 17 5 12 5ZM12 17C9.23858 17 7 14.7614 7 12C7 9.23858 9.23858 7 12 7C14.7614 7 17 9.23858 17 12C17 14.7614 14.7614 17 12 17ZM12 9.5C10.6193 9.5 9.5 10.6193 9.5 12C9.5 13.3807 10.6193 14.5 12 14.5C13.3807 14.5 14.5 13.3807 14.5 12C14.5 10.6193 13.3807 9.5 12 9.5Z"
                                        Width="16"
                                        Height="16"
                                        Foreground="{DynamicResource EasyAccentBrush}"
                                        VerticalAlignment="Center" />
                                    <TextBlock Text="Keep the window visible to watch real-time progress overlays."
                                               Classes="subtle" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" Spacing="28" Margin="28,0,0,0">
                    <Border Padding="28"
                            CornerRadius="24"
                            Background="{DynamicResource EasyGlassGradientBrush}"
                            BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                            BorderThickness="1"
                            BoxShadow="0 26 50 0 #14000000">
                        <views:EverythingSearchView />
                    </Border>
                    <Border Padding="28"
                            CornerRadius="24"
                            Background="{DynamicResource EasyGlassGradientBrush}"
                            BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                            BorderThickness="1"
                            BoxShadow="0 26 50 0 #14000000">
                        <StackPanel Spacing="18">
                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <Border Width="36" Height="36" CornerRadius="18"
                                        Background="{DynamicResource EasyGlassOverlayBrush}"
                                        BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                                        BorderThickness="1">
                                    <Image Source="avares://EasyExtractCrossPlatform/Assets/AppBadge.png"
                                           Stretch="Uniform"
                                           Margin="6" />
                                </Border>
                                <TextBlock Text="Extraction overview"
                                           FontWeight="SemiBold"
                                           FontSize="18" />
                            </StackPanel>
                            <Separator Margin="0,4" />
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <TextBlock Text="Packages completed"
                                           Classes="subtle" />
                                <TextBlock Grid.Column="1"
                                           Text="0"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource EasyAccentBrush}" />

                                <TextBlock Grid.Row="1"
                                           Classes="subtle"
                                           Margin="0,16,0,0"
                                           Text="Assets extracted" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Margin="0,16,0,0"
                                           Text="0"
                                           FontSize="26"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource EasyGlassMutedBrush}" />

                                <TextBlock Grid.Row="2"
                                           Classes="subtle"
                                           Margin="0,16,0,0"
                                           Text="Last extraction" />
                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Margin="0,16,0,0"
                                           Text="Not started"
                                           FontWeight="SemiBold" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Padding="28"
                            CornerRadius="24"
                            Background="{DynamicResource EasyGlassGradientBrush}"
                            BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                            BorderThickness="1"
                            BoxShadow="0 24 48 0 #14000000">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <PathIcon
                                    Data="M12 2C8.13401 2 5 5.13401 5 9C5 11.0864 5.82107 13.0592 7.28948 14.5355L12 22L16.7105 14.5355C18.1789 13.0592 19 11.0864 19 9C19 5.13401 15.866 2 12 2ZM12 5.5C13.933 5.5 15.5 7.067 15.5 9C15.5 10.933 13.933 12.5 12 12.5C10.067 12.5 8.5 10.933 8.5 9C8.5 7.067 10.067 5.5 12 5.5Z"
                                    Width="20"
                                    Height="20"
                                    Foreground="{DynamicResource EasyAccentBrush}"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="Release channel"
                                           FontWeight="SemiBold"
                                           FontSize="18" />
                            </StackPanel>
                            <TextBlock Text="You're running the latest build."
                                       Classes="subtle" />
                            <Separator Margin="0,4" />
                            <TextBlock Text="Credits to Jan-Fcloud for Some ideas"
                                       Classes="subtle"
                                       Opacity="0.6" />
                            <TextBlock Text="Credits to DigitalAzure for the logo"
                                       Classes="subtle"
                                       Opacity="0.6" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2"
                    CornerRadius="22"
                    Padding="18"
                    Background="{DynamicResource EasyGlassOverlayFaintBrush}"
                    BorderBrush="{DynamicResource EasyGlassNeutralBorderBrush}"
                    BorderThickness="1"
                    BoxShadow="0 20 40 0 #12000000">
                <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Button Classes="ghost" ToolTip.Tip="Send feedback">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <PathIcon
                                        Data="M10.75,14 C11.9926407,14 13,15.0073593 13,16.25 L13,17.7519766 L12.9921156,17.8604403 C12.6813607,19.9866441 10.7715225,21.0090369 7.5667905,21.0090369 C4.37361228,21.0090369 2.43330141,19.9983408 2.01446278,17.8965776 L2,17.75 L2,16.25 C2,15.0073593 3.00735931,14 4.25,14 L10.75,14 Z M10.75,15.5 L4.25,15.5 C3.83578644,15.5 3.5,15.8357864 3.5,16.25 L3.5,17.670373 C3.77979024,18.870787 5.05062598,19.5090369 7.5667905,19.5090369 C10.082858,19.5090369 11.2966388,18.8777026 11.5,17.6931543 L11.5,16.25 C11.5,15.8357864 11.1642136,15.5 10.75,15.5 Z M7.5,6 C9.43299662,6 11,7.56700338 11,9.5 C11,11.4329966 9.43299662,13 7.5,13 C5.56700338,13 4,11.4329966 4,9.5 C4,7.56700338 5.56700338,6 7.5,6 Z M19.75,2 C20.9926407,2 22,3.00735931 22,4.25 L22,7.75 C22,8.99264069 20.9926407,10 19.75,10 L18.2951017,10 L16.1285541,12.1414295 C15.637473,12.6266415 14.846031,12.6218837 14.360819,12.1308026 C14.1296416,11.8968289 14,11.5811661 14,11.2526232 L13.9993676,9.98619781 C12.8746845,9.86154927 12,8.90792139 12,7.75 L12,4.25 C12,3.00735931 13.0073593,2 14.25,2 L19.75,2 Z M7.5,7.5 C6.3954305,7.5 5.5,8.3954305 5.5,9.5 C5.5,10.6045695 6.3954305,11.5 7.5,11.5 C8.6045695,11.5 9.5,10.6045695 9.5,9.5 C9.5,8.3954305 8.6045695,7.5 7.5,7.5 Z M19.75,3.5 L14.25,3.5 C13.8357864,3.5 13.5,3.83578644 13.5,4.25 L13.5,7.75 C13.5,8.16421356 13.8357864,8.5 14.25,8.5 L16,8.5 L16,10.5 L18.2512219,8.25634766 L19.75,8.25 C20.1642136,8.25 20.5,7.91421356 20.5,7.5 L20.5,4.25 C20.5,3.83578644 20.1642136,3.5 19.75,3.5 Z"
                                        Width="18" Height="18" />
                                    <TextBlock Text="Feedback" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="6"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <PathIcon
                            Data="M12 21.35L10.55 20.03C5.4 15.36 2 12.27 2 8.5C2 5.42 4.42 3 7.5 3C9.24 3 10.91 3.81 12 5.09C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.42 22 8.5C22 12.27 18.6 15.36 13.45 20.04L12 21.35Z"
                            Width="18"
                            Height="18"
                            Foreground="{DynamicResource EasyAccentBrush}"
                            VerticalAlignment="Center" />
                        <TextBlock Text="Made by HakuSystems"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="12"
                                HorizontalAlignment="Right">
                        <Button Classes="ghost"
                                ToolTip.Tip="Open settings"
                                Click="SettingsButton_OnClick">
                            <Button.Content>
                                <PathIcon
                                    Data="M14 9.50006C11.5147 9.50006 9.5 11.5148 9.5 14.0001C9.5 16.4853 11.5147 18.5001 14 18.5001C15.3488 18.5001 16.559 17.9066 17.3838 16.9666C18.0787 16.1746 18.5 15.1365 18.5 14.0001C18.5 13.5401 18.431 13.0963 18.3028 12.6784C17.7382 10.8381 16.0253 9.50006 14 9.50006ZM11 14.0001C11 12.3432 12.3431 11.0001 14 11.0001C15.6569 11.0001 17 12.3432 17 14.0001C17 15.6569 15.6569 17.0001 14 17.0001C12.3431 17.0001 11 15.6569 11 14.0001Z M21.7093 22.3948L19.9818 21.6364C19.4876 21.4197 18.9071 21.4515 18.44 21.7219C17.9729 21.9924 17.675 22.4693 17.6157 23.0066L17.408 24.8855C17.3651 25.273 17.084 25.5917 16.7055 25.682C14.9263 26.1061 13.0725 26.1061 11.2933 25.682C10.9148 25.5917 10.6336 25.273 10.5908 24.8855L10.3834 23.0093C10.3225 22.4731 10.0112 21.9976 9.54452 21.7281C9.07783 21.4586 8.51117 21.4269 8.01859 21.6424L6.29071 22.4009C5.93281 22.558 5.51493 22.4718 5.24806 22.1859C4.00474 20.8536 3.07924 19.2561 2.54122 17.5137C2.42533 17.1384 2.55922 16.7307 2.8749 16.4977L4.40219 15.3703C4.83721 15.0501 5.09414 14.5415 5.09414 14.0007C5.09414 13.4598 4.83721 12.9512 4.40162 12.6306L2.87529 11.5051C2.55914 11.272 2.42513 10.8638 2.54142 10.4882C3.08038 8.74734 4.00637 7.15163 5.24971 5.82114C5.51684 5.53528 5.93492 5.44941 6.29276 5.60691L8.01296 6.36404C8.50793 6.58168 9.07696 6.54881 9.54617 6.27415C10.0133 6.00264 10.3244 5.52527 10.3844 4.98794L10.5933 3.11017C10.637 2.71803 10.9245 2.39704 11.3089 2.31138C12.19 2.11504 13.0891 2.01071 14.0131 2.00006C14.9147 2.01047 15.8128 2.11485 16.6928 2.31149C17.077 2.39734 17.3643 2.71823 17.4079 3.11017L17.617 4.98937C17.7116 5.85221 18.4387 6.50572 19.3055 6.50663C19.5385 6.507 19.769 6.45838 19.9843 6.36294L21.7048 5.60568C22.0626 5.44818 22.4807 5.53405 22.7478 5.81991C23.9912 7.1504 24.9172 8.74611 25.4561 10.487C25.5723 10.8623 25.4386 11.2703 25.1228 11.5035L23.5978 12.6297C23.1628 12.95 22.9 13.4586 22.9 13.9994C22.9 14.5403 23.1628 15.0489 23.5988 15.3698L25.1251 16.4965C25.441 16.7296 25.5748 17.1376 25.4586 17.5131C24.9198 19.2536 23.9944 20.8492 22.7517 22.1799C22.4849 22.4657 22.0671 22.5518 21.7093 22.3948Z"
                                    Width="18" Height="18" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Border x:Name="OverlayHost"
                Background="#CC050505"
                IsVisible="False"
                IsHitTestVisible="False"
                Opacity="0">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="{x:Static Visual.OpacityProperty}"
                                      Duration="0:0:0.24" />
                </Transitions>
            </Border.Transitions>
            <Grid>
                <Border x:Name="OverlayCard"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="920"
                        MaxHeight="680"
                        Margin="32"
                        Background="{DynamicResource EasyWindowBackgroundBrush}"
                        BorderBrush="{DynamicResource EasyGlassBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="36"
                        ClipToBounds="True"
                        Padding="0"
                        BoxShadow="0 48 120 0 #22000000"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0.94"
                                        ScaleY="0.94">
                            <ScaleTransform.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="{x:Static ScaleTransform.ScaleXProperty}"
                                                      Duration="0:0:0.24" />
                                    <DoubleTransition Property="{x:Static ScaleTransform.ScaleYProperty}"
                                                      Duration="0:0:0.24" />
                                </Transitions>
                            </ScaleTransform.Transitions>
                        </ScaleTransform>
                    </Border.RenderTransform>
                    <ContentControl x:Name="OverlayContent" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>